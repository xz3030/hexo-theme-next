// Custom styles.
blockquote_bigger {
font-family: Microsoft YaHei;
font-size: 20px;
font-style: italic;
width: 600px;
align: center;
margin: 0.25em 10px;
padding: 20px 40px;
line-height: 1.45;
position: relative;
color: #383838;
border:3px dashed #c1c1c1;
background:#fff;
}



blockquote {
  position: relative;
  margin: 40px 0;
  padding: 0;
  font-size: 18px;
  border-left: none;
  text-align: center;

  &::before, &::after {
    position: absolute;
    content: ' ';
    display: block;
    width: 100%;
    height: 24px;
    opacity: 0.2;
    background-repeat: no-repeat;
    background-position: 0 -6px;
    background-size: 22px 22px;
  }
  &::before {
    top: -20px;
    background-image: url($center-quote-left);
    border-top: 3px solid $grey-light;
  }
  &::after {
    bottom: -20px;
    background-image: url($center-quote-right);
    border-bottom: 3px solid $grey-light;
    background-position: 100% 8px;
  }

  p, div { text-align: center; }
}